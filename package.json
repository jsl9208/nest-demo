{
  "name": "kesci-nest-demo",
  "private": true,
  "scripts": {
    "build:libs": "lerna run --scope @kesci/* --include-dependencies build",
    "clean:mongo": "docker rm -f mongo",
    "clean:infra": "concurrently \"npm run clean:mongo\"",
    "dev:mongo": "docker run -d --name mongo --restart always -p 27017:27017 mongo",
    "dev:infra": "npm run dev:mongo",
    "dev:gateway": "lerna --scope gateway run start:dev --stream",
    "dev:crud": "lerna --scope crud run start:dev --stream",
    "dev:jobRunner": "lerna --scope job-runner run start:dev --stream",
    "dev:services": "npm run build:libs && concurrently \"cross-env PORT=3001 npm run dev:crud\" \"cross-env PORT=3002 npm run dev:jobRunner\"",
    "dev:apps": "concurrently \"sleep 20 && cross-env PORT=3000 npm run dev:gateway\" \"npm run dev:services\"",
    "dev": "npm run clean:infra && npm run dev:infra && npm run dev:apps"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "concurrently": "^6.1.0",
    "cross-env": "^7.0.3",
    "husky": "^6.0.0",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0"
  }
}
